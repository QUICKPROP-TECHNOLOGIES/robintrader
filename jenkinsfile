pipeline{
    agent any
    
    stages{
         stage ('BUILD') {
             steps{
               sh 'docker build -t qptrader:qp1.0 .'   
               sh 'sleep 5'
             }
        }
    
        stage ('DEPLOY') {
            steps{
            sh 'docker run -d docker.io/library/qptrader:qp1.0 8000:8000'
            sh 'sleep 5'
            }
        }
    }
    
}
